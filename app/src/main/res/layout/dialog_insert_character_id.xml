<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_insert_character_id_background"
    android:padding="@dimen/padding_dialog_insert_character_id">

    <EditText
        android:id="@+id/dialog_insert_character_id_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/string_insert_character_id"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/dialog_search_button"
        app:layout_constraintTop_toBottomOf="@id/dialog_close_button" />

    <Button
        android:id="@+id/dialog_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_insert_character_id_button_background"
        android:text="@string/string_dialog_search_button"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_insert_character_id_edit_text" />

    <ImageButton
        android:id="@+id/dialog_close_button"
        style="@style/dialog_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/close_button_image"
        app:layout_constraintBottom_toTopOf="@id/dialog_insert_character_id_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
